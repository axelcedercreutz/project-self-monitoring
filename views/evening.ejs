<%- include('./partials/reportingHeader.ejs') %>
<div class="flex-container">
    <div></div>
    <div>
        <form class="reporting-form" method="POST" action="/behavior/reporting/evening">
            <div class="reporting-form-main-div">
                <label for="date">Date</label>
                <input id="date" type="date" name="date" value="<%= date %>" required/>
            </div>
            <div class="reporting-form-main-div">
                <label for="exerciseTime">Time spent on exercise (0.1h accuracy)</label>
                <input id="exerciseTime" type="number" name="exerciseTime" value="<%= exerciseTime %>" step="0.5" min="0" required/>
            </div>
            <div class="reporting-form-main-div">
                <label for="studyTime">Time spent studying (0.1h accuracy)</label>
                <input id="studyTime" type="number" name="studyTime" value="<%= studyTime %>" step="0.5" min="0" required/>
            </div>
            <div class="reporting-form-main-div">
                <label for="qualityOfEating">Regularity and quality of eating</label>
                <div id="qualityOfEating" class="flex-container">
                <% for(var i = 1; i <= 5; i++) { %>
                    <% if(eveningMood === i) { %>
                        <input class="radio-button" type="radio" id="qualityOfEating-<%= i %>" name="qualityOfEating" value="<%= i %>" checked required>
                        <label for="<%= i %>"><%= i %></label>
                    <% } else { %>
                        <input class="radio-button" type="radio" id="qualityOfEating-<%= i %>" name="qualityOfEating" value="<%= i %>" required>
                        <label for="<%= i %>"><%= i %></label>
                    <% } %>
                <% } %>
                </div>
            </div>
            <div class="reporting-form-main-div">
                <label for="mood">Generic mood</label>
                <div id="mood" class="flex-container">
                    <% for(var i = 1; i <= 5; i++) { %>
                        <% if(eveningMood === i) { %>
                            <input class="radio-button" type="radio" id="mood-<%= i %>" name="mood" value="<%= i %>" checked required>
                            <label for="<%= i %>"><%= i %></label>
                        <% } else { %>
                            <input class="radio-button" type="radio" id="mood-<%= i %>" name="mood" value="<%= i %>" required>
                            <label for="<%= i %>"><%= i %></label>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <div></div>
            <div class="reporting-submit-button">
                <% if(eveningDone) { %>
                    <input type="submit" value="Update report!" />
                <% } else { %>
                    <input type="submit" value="Submit report!" />
                <% } %>
            </div>
        </form>
    </div>
</div>
<% if (errors) { %>
    <%- include('./partials/errors.ejs', errors) %>
<% } %>
<%- include('./partials/footer.ejs') %>