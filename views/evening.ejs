<%- include('./partials/reportingHeader.ejs') %>
<div class="flex-container">
    <div></div>
    <div>
        <form class="reporting-form" method="POST" action="/behavior/reporting/evening"> 
            <div class="reporting-form-main-div">
                <p>Date</p>
                <input type="date" name="date" value="<%= date %>" required/>
            </div>
            <div class="reporting-form-main-div">
                <p>Time spent on exercise (0.1h accuracy)</p>
                <input type="number" name="exerciseTime" value="<%= exerciseTime %>" step="0.5" min="0" required/>
            </div>
            <div class="reporting-form-main-div">
                <p>Time spent studying (0.1h accuracy)</p>
                <input type="number" name="studyTime" value="<%= studyTime %>" step="0.5" min="0" required/>
            </div>
            <div class="reporting-form-main-div">
                <p>Regularity and quality of eating</p>
                <div class="flex-container">
                <% for(var i = 1; i <= 5; i++) { %>
                    <% if(eveningMood === i) { %>
                        <div class="flex-container">
                            <input type="radio" id="<%= i %>" name="qualityOfEating" value="<%= i %>" checked required>
                            <label for="<%= i %>"><%= i %></label>
                        </div>
                    <% } else { %>
                        <div class="flex-container">
                            <input type="radio" id="<%= i %>" name="qualityOfEating" value="<%= i %>" required>
                            <label for="<%= i %>"><%= i %></label>
                        </div>
                    <% } %>
                <% } %>
                </div>
            </div>
            <div class="reporting-form-main-div">
                <p>Generic mood</p>
                <div class="flex-container">
                    <% for(var i = 1; i <= 5; i++) { %>
                        <% if(eveningMood === i) { %>
                            <div class="flex-container">
                                <input type="radio" id="mood-<%= i %>" name="mood" value="<%= i %>" checked required>
                                <label for="<%= i %>"><%= i %></label>
                            </div>
                        <% } else { %>
                            <div class="flex-container">
                                <input type="radio" id="mood-<%= i %>" name="mood" value="<%= i %>" required>
                                <label for="<%= i %>"><%= i %></label><br>
                            </div>
                        <% } %>
                    <% } %>
                </div>
            </div>
            <div></div>
            <div class="reporting-submit-button">
                <% if(eveningDone) { %>
                    <input type="submit" value="Update report!" />
                <% } else { %>
                    <input type="submit" value="Submit report!" />
                <% } %>
            </div>
        </form>
    </div>
</div>
<% if (errors) { %>
    <%- include('./partials/errors.ejs', errors) %>
<% } %>
<%- include('./partials/footer.ejs') %>